 {
  "manifest_version": 3,
  "name": "Text Extension",
  "description": "Copy and Clean Text Extension",
  "version": "1.0",
  "permissions": [
    "clipboardWrite",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html",

    "default_icon": {
      "16": "./assets/icon.png",
      "48": "./assets/icon.png",
      "128": "./assets/icon.png"
    }
  },
  "icons": {
    "16": "./assets/icon.png",
    "48": "./assets/icon.png",
    "128": "./assets/icon.png"
  }
} 

  